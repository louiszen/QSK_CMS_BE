  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/IZOGears/server.js",
      "env": {
        "NODE_ENV": "local",
        "SERVER_PORT": "7777",
      },
      "skipFiles": [
        "${workspaceFolder}/node_modules/**/*.js",
        "${workspaceFolder}\\node_modules\\**\\*.js",
        "<node_internals>/**/*.js",
        "<node_internals>\\**\\*.js"
      ]
    }
  ],
  
  "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"]
}
